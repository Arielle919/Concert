.row
  .small-12.columns
    %h1 Concert Tickets
.row
  .small-4.columns
    %select#sectionSelect
      %option{value:'selectNeutral'} Select Section
      %option{value:'ga'}General Admission
      %option{value:'vip'} VIP Section
  .small-2.columns
    %input#seatNum{type: 'text', placeholder: '# of seats?'}
  .small-2.columns
    %input#seatCost{type: 'text', placeholder: 'seat price?'}
  .small-3.columns
    %input#createSeats.button.round{type: 'button', value: 'Create Seats!'}
  .small-1.columns
    %input#name{type: 'text', placeholder: "name?"}
.row
  .small-12.columns
    #stage
      %h2 Stage
.row
  .small-12.columns
    #vip
      %h4 VIP
.row
  .small-12.columns
    #ga
      %h4 General Admission
.row
  .small-6.columns
    %h4 Reporting
    %table
      %tr
        %td Total VIP:$
        %td#vipTotal
      %tr
        %td Total GA: $
        %td#gaTotal
      %tr
        %td Grand Total: $
        %td#grandTotal
      %p
      %tr
        %td VIP people:
        %td#vipPeople
      %tr
        %td GA people:
        %td#gaPeople
      %tr
        %td Total People:
        %td#totalPeople
  .small-6.columns
    %h4 Seat List
    %h5 VIP:
    %h5 Seat    Name
    %ul#vipAdd
    %h5 GA:
    %h5 Seat    Name
    %ul#gaAdd

